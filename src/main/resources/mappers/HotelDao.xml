        <id column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="user_age" jdbcType="INTEGER" property="userAge"/>
    </resultMap>
    <select id="selectUserListByAge" parameterType="map" resultMap="UserMap">
