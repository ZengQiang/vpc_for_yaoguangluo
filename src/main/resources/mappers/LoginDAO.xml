<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.lyg.vpc.controller.factory.LoginDAO">
    <resultMap id="UsrMap" type="org.lyg.vpc.view.Usr">
        <id column="u_id" jdbcType="INTEGER" property="uId"/>
        <result column="u_name" jdbcType="INTEGER" property="uName"/>
        <result column="u_age" jdbcType="VARCHAR" property="uAge"/>
        <result column="u_sex" jdbcType="VARCHAR" property="uSex"/>
        <result column="u_phone" jdbcType="VARCHAR" property="uPhone"/>
        <result column="u_address" jdbcType="VARCHAR" property="uAddress"/>
        <result column="u_weChat" jdbcType="VARCHAR" property="uWeChat"/>
        <result column="u_class" jdbcType="VARCHAR" property="uClass"/>
        <result column="u_email" jdbcType="VARCHAR" property="uEmail"/>
        <result column="u_qq" jdbcType="VARCHAR" property="uQq"/>
    </resultMap>

    <resultMap id="UsrTokenMap" type="org.lyg.vpc.view.UsrToken">
        <id column="u_id" jdbcType="INTEGER" property="uId"/>
        <result column="u_key" jdbcType="INTEGER" property="uKey"/>
        <result column="u_password" jdbcType="VARCHAR" property="uPassword"/>
        <result column="u_time" jdbcType="BIGINT" property="uTime"/>
    </resultMap>

    <resultMap id="UsrFullMap" type="org.lyg.vpc.view.UsrFull">
        <id column="u_id" jdbcType="INTEGER" property="uId"/>
        <result column="u_name" jdbcType="INTEGER" property="uName"/>
        <result column="u_age" jdbcType="VARCHAR" property="uAge"/>
        <result column="u_sex" jdbcType="VARCHAR" property="uSex"/>
        <result column="u_phone" jdbcType="VARCHAR" property="uPhone"/>
        <result column="u_address" jdbcType="VARCHAR" property="uAddress"/>
        <result column="u_weChat" jdbcType="VARCHAR" property="uWeChat"/>
        <result column="u_class" jdbcType="VARCHAR" property="uClass"/>
        <result column="u_email" jdbcType="VARCHAR" property="uEmail"/>
        <result column="u_qq" jdbcType="VARCHAR" property="uQq"/>
        <result column="u_key" jdbcType="INTEGER" property="uKey"/>
        <result column="u_password" jdbcType="VARCHAR" property="uPassword"/>
        <result column="u_time" jdbcType="BIGINT" property="uTime"/>
    </resultMap>

    <select id="selectUsrByUId" parameterType="map" resultMap="UsrMap">
        SELECT *
        FROM usr AS u
        WHERE u.u_id = #{uId}
    </select>

    <select id="selectUsrByUEmail" parameterType="map" resultMap="UsrMap">
        SELECT *
        FROM usr AS u
        WHERE u.u_email = #{uEmail}
    </select>

    <select id="selectUsrTokenByUId" parameterType="map" resultMap="UsrTokenMap">
        SELECT *
        FROM usr_token AS u
        WHERE u.u_id = #{uId}
    </select>

    <select id="selectUsrFullByUId" parameterType="map" resultMap="UsrFullMap">
        SELECT *
        FROM usr AS u
        INNER JOIN usr_token AS t ON u.u_id =t.u_id
        WHERE u.u_id = #{uId}
    </select>

    <update id="updateUsrTokenByUId" parameterType="map">
        UPDATE usr_token AS u
        SET u.u_key = #{uKey}, u.u_password = #{uPassword}, u.u_time=#{uTime}
        WHERE u.u_id = #{uId}
    </update>

</mapper>